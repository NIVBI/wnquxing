  		</if>
  		<if test="bean.createTime != null">
  			#{bean.createTime},
  		</if>
  	</trim>
  	on DUPLICATE KEY update
  	<trim prefix="" suffix="" suffixOverrides=",">
  		<if test="bean.userId != null">
  			user_id = VALUES(user_id),
  		</if>
  		<if test="bean.taskType != null">
  			task_type = VALUES(task_type),
  		</if>
  		<if test="bean.completionStatus != null">
  			completion_status = VALUES(completion_status),
  		</if>
  		<if test="bean.personalGoal != null">
  			personal_goal = VALUES(personal_goal),
  		</if>
  		<if test="bean.continuousDays != null">
  			continuous_days = VALUES(continuous_days),
  		</if>
  		<if test="bean.createTime != null">
  			create_time = VALUES(create_time),
  		</if>
  	</trim>
  </insert>

  <!--批量插入-->
  <insert id="insertBatch" parameterType="com.wnquxing.entity.po.Task">
  	INSERT INTO task(user_id,task_type,completion_status,personal_goal,continuous_days,create_time)values
  	<foreach collection="list" item="item" separator=",">
  		(#{item.userId},#{item.taskType},#{item.completionStatus},#{item.personalGoal},#{item.continuousDays},#{item.createTime})
  	</foreach>
  </insert>

  <!--批量插入或更新-->
  <insert id="insertOrUpdateBatch" parameterType="com.wnquxing.entity.po.Task">
  	INSERT INTO task(user_id,task_type,completion_status,personal_goal,continuous_days,create_time)values
  	<foreach collection="list" item="item" separator=",">
  		(#{item.userId},#{item.taskType},#{item.completionStatus},#{item.personalGoal},#{item.continuousDays},#{item.createTime})
  	</foreach>
  	on DUPLICATE KEY update
  		user_id = VALUES(user_id),task_type = VALUES(task_type),completion_status = VALUES(completion_status),personal_goal = VALUES(personal_goal),continuous_days = VALUES(continuous_days),create_time = VALUES(create_time)
  </insert>

  <!--根据"id"查询-->
  <select id="selectById" resultMap="base_result_map">
  	SELECT <include refid="base_column_list"/> 
  	  FROM task
  	  WHERE id=#{id} 
  </select>

  <!--根据"id"更新-->
  <update id="updateById" parameterType="com.wnquxing.entity.po.Task">
  	UPDATE task
  	<set>
  		<if test="bean.userId != null">
  			user_id = #{bean.userId},
  		</if>
  		<if test="bean.taskType != null">
  			task_type = #{bean.taskType},
  		</if>
  		<if test="bean.completionStatus != null">
  			completion_status = #{bean.completionStatus},
  		</if>
  		<if test="bean.personalGoal != null">
  			personal_goal = #{bean.personalGoal},
  		</if>
  		<if test="bean.continuousDays != null">
  			continuous_days = #{bean.continuousDays},
  		</if>
  		<if test="bean.createTime != null">
  			create_time = #{bean.createTime},
  		</if>
  	</set>
