<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wnquxing.mappers.CheckInMapper">

  <!--实体映射-->
  <resultMap id="base_result_map" type="com.wnquxing.entity.po.CheckIn">

  	<!--签到ID（主键）-->
  	<id column="id" property="id"/>

  	<!--打卡时间-->
  	<result column="check_time" property="checkTime"/>

  	<!--关联用户ID-->
  	<result column="user_id" property="userId"/>

  	<!--打卡情况（0-未打卡，1-已打卡，2-迟到打卡等）-->
  	<result column="check_status" property="checkStatus"/>

  	<!--打卡记录创建时间-->
  	<result column="create_time" property="createTime"/>


  </resultMap>

  <!--通用查询列-->
  <sql id="base_column_list">
  	id, check_time, user_id, check_status, create_time 
  </sql>

  <!--基础查询条件-->
  <sql id="base_query_condition">
  	<if test="query.id !=null">
  		and id = #{query.id}
  	</if>
  	<if test="query.checkTime !=null">
  		and check_time = #{query.checkTime}
  	</if>
  	<if test="query.userId !=null and query.userId != ''">
  		and user_id = #{query.userId}
  	</if>
  	<if test="query.checkStatus !=null">
  		and check_status = #{query.checkStatus}
  	</if>
  	<if test="query.createTime !=null">
  		and create_time = #{query.createTime}
  	</if>
  </sql>

  <!--扩展查询条件-->
  <sql id="base_query_condition_extend">
  	<if test="query.checkTimeStart !=null and query.checkTimeStart != ''">
  		 <![CDATA[ and check_time>=str_to_date(#{query.checkTimeStart}, '%Y-%m-%d') ]]>
  	</if>
  	<if test="query.checkTimeEnd !=null and query.checkTimeEnd != ''">
  		 <![CDATA[ and check_time < date_sub(str_to_date(#{query.checkTimeEnd}, '%Y-%m-%d'), interval - 1 day) ]]>
  	</if>
  	<if test="query.userIdFuzzy !=null and query.userIdFuzzy != ''">
  		 and user_id like concat('%',#{query.userIdFuzzy},'%')
  	</if>
  	<if test="query.createTimeStart !=null and query.createTimeStart != ''">
  		 <![CDATA[ and create_time>=str_to_date(#{query.createTimeStart}, '%Y-%m-%d') ]]>
  	</if>
  	<if test="query.createTimeEnd !=null and query.createTimeEnd != ''">
  		 <![CDATA[ and create_time < date_sub(str_to_date(#{query.createTimeEnd}, '%Y-%m-%d'), interval - 1 day) ]]>
  	</if>
  </sql>

  <!--通用查询条件-->
  <sql id="query_condition">
  	<where>
  		1
  		<include refid="base_query_condition"/>
  		<include refid="base_query_condition_extend"/>
  	</where>
  </sql>

  <!--查询列表-->
  <select id="selectList" resultMap="base_result_map">
  	SELECT <include refid="base_column_list"/> 
  	FROM check_in
  	  <include refid="query_condition"/>
  	  <if test="query.orderBy != null">order by ${query.orderBy}</if>
  	  <if test="query.simplePage != null">limit #{query.simplePage.start}, #{query.simplePage.end}</if>
  </select>

  <!--查询数量-->
  <select id="selectCount" resultType="java.lang.Integer">
  	SELECT count(1) 
  	FROM check_in
  	  <include refid="query_condition"/>
  </select>

  <!--根据条件删除-->
  <delete id="deleteByQuery">
  	DELETE FROM
  		check_in
  	<include refid="query_condition"/>
  </delete>

  <!--根据条件更新-->
  <update id="updateByQuery">
  	UPDATE check_in
  	<set>
  		<if test="bean.checkTime != null">
  			check_time = #{bean.checkTime},
  		</if>
  		<if test="bean.userId != null">
  			user_id = #{bean.userId},
  		</if>
  		<if test="bean.checkStatus != null">
  			check_status = #{bean.checkStatus},
  		</if>
  		<if test="bean.createTime != null">
  			create_time = #{bean.createTime},
  		</if>
  	</set>
  	<include refid="query_condition"/>
  </update>

  <!--插入(匹配有字段的值)-->
  <insert id="insert" parameterType="com.wnquxing.entity.po.CheckIn">
  	<selectKey keyProperty="bean.id" resultType="java.lang.Long" order="AFTER">
  		SELECT LAST_INSERT_ID()
  	</selectKey>
  	INSERT INTO check_in
  	<trim prefix="(" suffix=")" suffixOverrides=",">
  		<if test="bean.id != null">
  			id,
  		</if>
  		<if test="bean.checkTime != null">
  			check_time,
  		</if>
  		<if test="bean.userId != null">
  			user_id,
  		</if>
  		<if test="bean.checkStatus != null">
  			check_status,
  		</if>
  		<if test="bean.createTime != null">
  			create_time,
  		</if>
  	</trim>
  	<trim prefix="values (" suffix=")" suffixOverrides=",">
  		<if test="bean.id != null">
  			#{bean.id},
  		</if>
  		<if test="bean.checkTime != null">
  			#{bean.checkTime},
  		</if>
  		<if test="bean.userId != null">
  			#{bean.userId},
  		</if>
  		<if test="bean.checkStatus != null">
  			#{bean.checkStatus},
  		</if>
  		<if test="bean.createTime != null">
  			#{bean.createTime},
  		</if>
  	</trim>
  </insert>

  <!--插入或更新(匹配有值的字段)-->
  <insert id="insertOrUpdate" parameterType="com.wnquxing.entity.po.CheckIn">
  	INSERT INTO check_in
  	<trim prefix="(" suffix=")" suffixOverrides=",">
  		<if test="bean.id != null">
  			id,
  		</if>
  		<if test="bean.checkTime != null">
  			check_time,
  		</if>
  		<if test="bean.userId != null">
  			user_id,
  		</if>
  		<if test="bean.checkStatus != null">
  			check_status,
  		</if>
  		<if test="bean.createTime != null">
  			create_time,
  		</if>
  	</trim>
  	<trim prefix="values (" suffix=")" suffixOverrides=",">
  		<if test="bean.id != null">
  			#{bean.id},
  		</if>
  		<if test="bean.checkTime != null">
  			#{bean.checkTime},
  		</if>
  		<if test="bean.userId != null">
  			#{bean.userId},
  		</if>
  		<if test="bean.checkStatus != null">
  			#{bean.checkStatus},
  		</if>
  		<if test="bean.createTime != null">
  			#{bean.createTime},
  		</if>
  	</trim>
  	on DUPLICATE KEY update
  	<trim prefix="" suffix="" suffixOverrides=",">
  		<if test="bean.checkTime != null">
  			check_time = VALUES(check_time),
  		</if>
  		<if test="bean.userId != null">
  			user_id = VALUES(user_id),
  		</if>
  		<if test="bean.checkStatus != null">
  			check_status = VALUES(check_status),
  		</if>
  		<if test="bean.createTime != null">
  			create_time = VALUES(create_time),
  		</if>
  	</trim>
  </insert>

  <!--批量插入-->
  <insert id="insertBatch" parameterType="com.wnquxing.entity.po.CheckIn">
  	INSERT INTO check_in(check_time,user_id,check_status,create_time)values
  	<foreach collection="list" item="item" separator=",">
  		(#{item.checkTime},#{item.userId},#{item.checkStatus},#{item.createTime})
  	</foreach>
  </insert>

  <!--批量插入或更新-->
  <insert id="insertOrUpdateBatch" parameterType="com.wnquxing.entity.po.CheckIn">
  	INSERT INTO check_in(check_time,user_id,check_status,create_time)values
  	<foreach collection="list" item="item" separator=",">
  		(#{item.checkTime},#{item.userId},#{item.checkStatus},#{item.createTime})
  	</foreach>
  	on DUPLICATE KEY update
  		check_time = VALUES(check_time),user_id = VALUES(user_id),check_status = VALUES(check_status),create_time = VALUES(create_time)
  </insert>

  <!--根据"id"查询-->
  <select id="selectById" resultMap="base_result_map">
  	SELECT <include refid="base_column_list"/> 
  	  FROM check_in
  	  WHERE id=#{id} 
  </select>

  <!--根据"id"更新-->
  <update id="updateById" parameterType="com.wnquxing.entity.po.CheckIn">
  	UPDATE check_in
  	<set>
  		<if test="bean.checkTime != null">
  			check_time = #{bean.checkTime},
  		</if>
  		<if test="bean.userId != null">
  			user_id = #{bean.userId},
  		</if>
  		<if test="bean.checkStatus != null">
  			check_status = #{bean.checkStatus},
